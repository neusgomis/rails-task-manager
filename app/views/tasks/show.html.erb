<h1><%=@task.title%></h1>
<h2><%=@task.details%></h2>
<p><%= @task.completed? ? 'this task is completed' : 'this task is not completed yet' %></p>


<button class="btn btn-primary"><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></button>

<button class="btn btn-primary"><%= link_to "Go back to all tasks", tasks_path %></button>
<button class="btn btn-primary"><%= link_to "Edit Task", edit_task_path %></button>
