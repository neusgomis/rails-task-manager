<div class="mx-auto my-3" style="width: 400px;">
  <%= form_with model: @task do |f| %>
    <h1>Create New Task</h1>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
    <%= f.label :details, class: "form-label" %>
    <%= f.text_field :details, class:"form-control"%>
    <div class="mb-3">
    <%= f.submit "Create Task", class: "btn btn-primary my-3" %>
  <% end %>
</div>
